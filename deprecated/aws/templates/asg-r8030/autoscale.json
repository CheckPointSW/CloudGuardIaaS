            "CidrIp": {
              "Ref": "ELBClients"
            },
            "FromPort": {
              "Ref": "ELBPort"
            },
            "ToPort": {
              "Ref": "ELBPort"
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "URL": {
      "Description": "The URL of the Proxy",
      "Condition": "CreateELB",
      "Value": {
